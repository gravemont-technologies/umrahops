# ==================================================
# UmrahOps Environment Configuration
# Copy this file to .env and fill in your values
# ==================================================

# === Supabase Auth & Database (Required for production) ===
# Get these from: https://app.supabase.com/project/_/settings/api
VITE_SUPABASE_URL=
VITE_SUPABASE_ANON_KEY=

# Optional: Postgres connection for dual-mode or migration
# Format: postgresql://user:pass@host:5432/dbname
DATABASE_URL=

# === Local SQLite (Default for Replit/local dev) ===
# Path to local database file; created automatically if missing
SQLITE_PATH=./data/umrahops.db

# Optional: SQLite encryption key (32-char hex for sqlcipher)
# Leave empty to disable encryption; see docs/manual_local_steps.md
# SQLITE_ENCRYPTION_KEY=

# === OpenAI API (Optional: runs in mock mode if absent) ===
# Get key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# AI configuration
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_BATCH_SIZE=50

# === NUSUK Integration (Optional) ===
# Mode A: API client (if NUSUK offers public API)
VITE_NUSUK_URL=
VITE_NUSUK_TOKEN=

# Mode B: RPA automation runs locally via Playwright
# No env vars needed; see scripts/rpa/nusuk_rpa_local.js

# === Remote Logging (Optional, opt-in only) ===
# Push audit logs to external endpoint (e.g., analytics server)
# Leave empty to disable; requires explicit user consent UI toggle
LOG_SERVER_URL=

# Control remote logging (true = enable, false = local-only)
REACT_APP_REMOTE_LOGS=false

# === Session & Security ===
# Session secret for Express session store (random 32-char string)
SESSION_SECRET=

# Session max age in milliseconds (default: 7 days)
SESSION_MAX_AGE=604800000

# === Developer Options ===
# Show debug info at /dev/health endpoint
DEBUG_MODE=false

# Skip startup env checks (not recommended)
SKIP_STARTUP_CHECK=false
