# ==================================================
# UmrahOps Environment Configuration
# Copy this file to .env and fill in your values
# ==================================================

# === DATABASE (Required) ===
# LOCAL: Leave blank to use SQLite by default
# PRODUCTION: postgresql://user:pass@host:5432/dbname
DATABASE_URL=

# === SESSION & SECURITY (Required) ===
# Random 32-character string for cookie encryption
SESSION_SECRET=

# === CLOUD HOSTING (Optional) ===
# Automatically set by Railway/Render
PORT=5000
NODE_ENV=production

# === LOCAL SQLITE (Default if DATABASE_URL is empty) ===
SQLITE_PATH=./data/umrahops.db

# === OPENAI API (Recommended for AI features) ===
# Get key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini

# === NUSUK INTEGRATION ===
# Mode: Local RPA via Playwright
# Configuration is handled in scripts/rpa/nusuk_rpa_local.ts
# Optional: API endpoint if available
VITE_NUSUK_URL=
VITE_NUSUK_TOKEN=

# === LOGGING (Optional) ===
# Enable remote audit log ingestion
LOG_SERVER_URL=
REACT_APP_REMOTE_LOGS=false
DEBUG_MODE=false

NO_CACHE=